{
	"manifest_version": 2,
	"name": "Teleportr",
	"version": "1.0",
	"description": "Quick navigation to your favorite websites using shortcuts",

	"icons": {
		"48": "icons/48.png",
		"96": "icons/96.png"
	},

	"permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "storage"],

	"background": {
		"scripts": ["shortcuts.js", "background.js"]
	},

	"browser_action": {
		"default_icon": "icons/48.png",
		"default_title": "Teleportr",
		"default_popup": "popup.html"
	}
}
